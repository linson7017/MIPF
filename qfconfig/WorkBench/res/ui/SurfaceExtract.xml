<?xml version="1.0" encoding="UTF-8"?>

<Widget id="SurfaceExtract">
	<VLayout>
		<Label text="Surface Extract"/>
		<HLayout>
			<Label text="Image:"/>
			<QmitkDataStorageComboBox id="SurfaceExtract.ImageSelector"/>
		</HLayout>
		<HLayout>
			<Label text="Smooth:" />
			<LineEdit text="40"  id="SurfaceExtract.Smooth"/>
			<CheckBox text="Largest Connect" id="SurfaceExtract.LargestConnect" />
			<Button text="Extract" msgcommand="SurfaceExtract.Extract"/>
		</HLayout>
		<Spacing size="100"/>
		<HLayout>
			<Label text="Surface:"/>
			<QmitkDataStorageComboBox id="SurfaceExtract.SurfaceSelector"/>
		</HLayout>
		<HLayout>
			<Label text="Smooth Times:" />
			<LineEdit text="40"  id="SurfaceExtract.SmoothTimes"/>
			<Button text="Smoot" msgcommand="SurfaceExtract.Smooth"/>
		</HLayout>
		
		<Stretch size="50"/>	
	</VLayout>
</Widget>









