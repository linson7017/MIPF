<?xml version="1.0" encoding="UTF-8"?>

<styles>

	<style id="mainstyle">
		<!-- Widget -->
		<Widget 
			background="#34495E"
			font-size="12px"
		/>
		<Widget 
			states="disabled"
			color="gray"
		/>
		<!-- Button -->
		<Button 
			min-height="20px"
			border-style="none"
			padding="10px"
			border-radius="5px"
			color="#FFFFFF"
			background="#486178"
		/>
		<Button 
			states="hover"
			color="#F0F0F0"
			background="#4E6D8C"  <!-- 78,109,140 -->
		/>
		<Button 
			states="pressed"
			color="#2D3E50"
			background="#6D8DAD"
		/>
		<Button 
			states="checked"
			color="#2D3E50"
			background="#587B9E"
		/>
		<!-- LineEdit -->
		<LineEdit 
			padding="6px"
			border-radius="5px"
			border="2px solid #587188"
			font-size="12px"
			color="white"
		/>
		<LineEdit 
			states="focus"
			border="2px solid #DCE4EC"
			background-color="#4E6D8C"
		/>
		<!-- Label -->
		<Label 
			font-size="14px"
			color="white"
			font-weight="100"
		/>
		<!-- CheckBox -->
		<CheckBox 
			font-size="12px"
			color="white"
			font-weight="100"
		/>
		<CheckBox 
			sub-controls="indicator"
			border="2px solid #587188"
		/>
		<CheckBox 
			states="checked"
			sub-controls="indicator"
			border="7px solid #DCE4EC"
		/>
		<!-- TabWidget -->
		<Tab 
			color="#FFFFFF"
		/>
		<TabBar 
			sub-controls="tab" 
			background="486178"
		/>
		<TabBar 
			sub-controls="tab" 
			states="selected" 
			background="#4E6D8C" 
		/>
		<!-- MenuBar -->
		<Menu
			sub-controls="item"
			states="normal"
			background-color="#486178";
		/>
		<Menu
			sub-controls="item"
			states="selected"
			background-color="#4E6D8C";
		/>
		<Menu
			sub-controls="item"
			states="pressed"
			background-color="#6D8DAD";
		/>
		<Menu
			sub-controls="separator"
			background-color="#B0C1D0";
		/>
		<!-- ComboBox -->
		<ComboBox 
			sub-controls="item"
			states="hover"
			background-color="#4E6D8C"
		/>
		<ComboBox 
			sub-controls="item"
			states="pressed"
			background-color="#B8C6D1"
		/>
		<!-- ProgressBar -->
		<ProgressBar 
			font="9pt"
			height="8px"
			background="#E8EDF2"
			border-radius="5px"
			text-align="center"
			border="1px solid #E8EDF2"
		/>
		<ProgressBar 
			sub-controls="chunk"
			border-radius="5px"
			background-color="#E74C3C"
		/>
		<!-- Slider -->
		<Slider 
			sub-controls="groove"
			states="horizontal"
			height="3px"
			border-radius="3px"
			background="#18181A"
		/>
		<Slider 
			sub-controls="add-page"
			states="horizontal"
			height="3px"
			border-radius="3px"
			background="#18181A"
		/>
		<Slider 
			sub-controls="sub-page"
			states="horizontal"
			height="8px"
			border-radius="3px"
			background="#0081FF"
		/>
		<Slider 
			sub-controls="handle"
			width="12px"
			margin-top="-5px"
			margin-bottom="-4px"
			border-radius="6px"
			background="qradialgradient(spread:pad,cx:0.5,cy:0.5,radius:0.5,fx:0.5,fy:0.5,stop:0.0 #3CA2A4,stop:1.0 #27B8B0)"
		/>
		<!-- ListView -->
		<ListView
			sub-controls="item"
			states="normal"
			background-color="#486178";		
		/>
		<ListView
			sub-controls="item"
			states="selected"
			background-color="#4E6D8C";
		/>
		<ListView
			sub-controls="item"
			states="pressed"
			background-color="#6D8DAD";
		/>
		<!-- DockWidget -->
		<DockWidget 
			sub-controls="title"
			color="#D1EAFE"
			font-weight="bold"
		/>
		<!-- TreeWidget -->
		<TreeView
			sub-controls="item"
			states="selected"
			font-size="12px"
			height="100"
		/>
	</style>

	<style id="CenterWidgetStyle">
		<!-- Widget -->
		<Widget 
			background="#486178"
		/>
	</style>
</styles>


